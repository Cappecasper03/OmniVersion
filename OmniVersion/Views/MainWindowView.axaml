<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:OmniVersion.ViewModels"
        xmlns:vg="using:OmniVersion.Views.Git"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OmniVersion.Views.MainWindowView"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logo.ico"
        Title="OmniVersion">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *">
        <TextBlock Grid.Row="0" Background="Red"></TextBlock>

        <TabControl Grid.Row="1" Padding="0">
            <TabItem Header="Red">
                <vg:GitRepositoryView />
            </TabItem>

            <TabItem Header="Green">
                <TextBlock Background="Green"></TextBlock>
            </TabItem>

            <TabItem Header="Blue">
                <TextBlock Background="Blue"></TextBlock>
            </TabItem>
        </TabControl>
    </Grid>

</Window>